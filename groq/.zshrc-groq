# silence sft if it's not installed
if ! command -v sft >/dev/null; then
  sft() { :; }
fi

# groq suggestions
sft ssh-config >> ~/.ssh/config

# regex for something I don't remember right now...
export nova_ncp_reg="N[0-9]/C[0-9]/P[0-9]+ <-> N[0-9]/C[0-9]/P[0-9]+"

